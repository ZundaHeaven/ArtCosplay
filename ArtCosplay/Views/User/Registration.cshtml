@model ArtCosplay.Models.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="registration-container">
    <h2 class="registration-title">Регистрация в Art-Cosplay</h2>

    <form method="post" asp-controller="User" asp-action="Registration">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="username">Имя пользователя</label>
            <input type="text" asp-for="Name" placeholder="Придумайте никнейм" required>
        </div>

        <div class="form-group">
            <label for="email">Электронная почта</label>
            <input type="email" asp-for="Email" placeholder="Введите ваш email" required>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" asp-for="Password" placeholder="Придумайте пароль" required>
            </div>
            <div class="form-group">
                <label for="confirm-password">Подтверждение пароля</label>
                <input type="password" asp-for="PasswordConfirm" placeholder="Повторите пароль" required>
            </div>
        </div>

        <div class="form-group">
            <label for="about">О себе</label>
            <textarea asp-for="About" rows="4" placeholder="Расскажите немного о себе и своих интересах"></textarea>
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox"> Я согласен с <a href="/Home/Rules">правилами сайта</a>
            </label>
        </div>

        <button type="submit" class="register-button">Зарегистрироваться</button>

        <div class="terms">
            Уже есть аккаунт? <a href="/Login">Войти</a>
        </div>

        <a href="/" class="back-button"><i class="fas fa-arrow-left"></i> Назад на главную</a>
    </form>
</div>